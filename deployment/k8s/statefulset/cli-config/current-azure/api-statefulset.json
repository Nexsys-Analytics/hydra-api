{
  "apiVersion": "apps/v1",
  "kind": "StatefulSet",
  "metadata": {
    "name": "api-test-statefulset",
    "labels": {
      "app": "api-test"
    }
  },
  "spec": {
    "replicas": 1,
    "serviceName": "hydra-api",
    "updateStrategy": {
      "type": "RollingUpdate"
    },
    "selector": {
      "matchLabels": {
        "app": "api-test"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "api-test"
        }
      },
      "spec": {
        "terminationGracePeriodSeconds": 30,
        "containers": [
          {
            "name": "api-test",
            "image": "hwiregistry.azurecr.io/hydra-api:test",
            "imagePullPolicy": "Always",
            "resources": {
              "limits": {
                "memory": "512Mi"
              },
              "requests": {
                "memory": "512Mi"
              }
            },
            "env": [
              {
                "name": "IS_RUNNING_ENVIRONMENT_K8S",
                "value": "TRUE"
              },
              {
                "name": "K8S_IMAGE_SIMPLE_NAME_SOURCE_API",
                "value": "hydra-api"
              }
            ],
            "ports": [
              {
                "name": "api-test-srv",
                "containerPort": 8080
              }
            ],
            "volumeMounts": [
              {
                "name": "hydra-test-config-volume",
                "mountPath": "/root/.hydra"
              },
              {
                "name": "hydra-test-aws-config-volume",
                "mountPath": "/root/.aws"
              },
              {
                "name": "dockersock",
                "mountPath": "/var/run/docker.sock"
              }
            ]
          }
        ],
        "volumes": [
          {
            "name": "hydra-test-config-volume",
            "configMap": {
              "name": "hydra-test-api-config-map"
            }
          },
          {
            "name": "hydra-test-aws-config-volume",
            "configMap": {
              "name": "hydra-test-api-aws-config-map"
            }
          },
          {
            "name": "dockersock",
            "hostPath": {
              "path": "/var/run/docker.sock"
            }
          }
        ]
      }
    }
  }
}
