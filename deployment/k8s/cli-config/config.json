{
  "service":{
    "name": "hydra-api",
    "description": "This service represents the Hydra Server API of jobs.",
    "warning": "The order of the resources is important because the creation is done forward while deletion is done backward!",
    "resources":[
      {
        "properties":{
          "name":"api-aws-config-map",
          "temp_folder":"aws-config-map",
          "remote_service": "s3",
          "remote_sub_folder":"/.aws",
          "type": "configmap",
          "subtype": "from-file",
          "enabled": "true"
        },
        "files":[
          "config",
          "credentials"
        ]
      }, {
        "properties":{
          "name":"api-config-map",
          "temp_folder":"config-map",
          "remote_service": "s3",
          "remote_sub_folder":"/.hydra",
          "type": "configmap",
          "subtype": "from-file",
          "enabled": "true"
        },
        "files":[
          "config.py",
          "hydra.ini"
        ]
      }, {
        "properties":{
          "name":"hydra-api-statefulset",
          "folder":"statefulset",
          "type": "statefulset",
          "subtype": "n/a",
          "enabled": "true"
        },
        "files_execution_order": [
          "api-statefulset"
        ],
        "containers": {
          "api": {
            "image_name": "hydra-api"
          }
        }
      }, {
        "properties":{
          "name":"hydra-api-nodeport",
          "folder":"nodeport",
          "type": "load-balancer",
          "subtype": "n/a",
          "certificate_enabled": "false",
          "dns_enabled": "false",
          "enabled": "true"
        },
        "files_execution_order": [
          "api-service"
        ]
      }
    ]
  }
}
